<form id="new-key-form" class="standalone-form" action="<%= root_path %>extract_strings" method="post" onsubmit="disableSubmit(event.target);">
  <h2>Extract Strings from code:</h2>

  <table>
    <tr>
      <td>Target File</td>
      <td>
        <input name="filename" type="text" />
      </td>
    </tr>
    <tr>
      <td>Source Language</td>
      <td><input name="language" type="text" />
    </tr>
  </table>
  <p><input class="btn btn-primary" type="submit" value="Create file and extract Strings"></p>
</form>
