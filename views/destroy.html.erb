<form action="<%= key_path(key) %>" method="post" style="max-width: 500px; margin: 50px auto; text-align: center" onsubmit="disableSubmit(event.target);">
  <input type="hidden" name="_method" value="delete" />

  <p>
    Please confirm the deletion of key <strong><%= key.name %></strong> with <%= translations.count %> translations.
  </p>

  <input class="btn btn-danger" type="submit" value="Yes, really delete" />
  <a href="#" onclick="history.back(); return false;">No, go back</a>

</form>